# Chatsy Extension Environment Configuration
# Copy this file to config.env and fill in your actual values
# Never commit config.env files to version control

# =============================================================================
# AI API KEYS
# =============================================================================

# HuggingFace API Configuration
# Get your free API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models
HUGGINGFACE_MODEL_NAME=microsoft/DialoGPT-medium
HUGGINGFACE_MAX_LENGTH=100
HUGGINGFACE_TEMPERATURE=0.7

# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent
GEMINI_MODEL_NAME=gemini-pro
GEMINI_MAX_TOKENS=150
GEMINI_TEMPERATURE=0.8

# OpenAI API Configuration (Future Implementation)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_API_URL=https://api.openai.com/v1/chat/completions
# OPENAI_MODEL_NAME=gpt-3.5-turbo

# =============================================================================
# EXTENSION CONFIGURATION
# =============================================================================

# Extension Settings
EXTENSION_NAME=Chatsy AI Assistant
EXTENSION_VERSION=1.0.0
EXTENSION_DESCRIPTION=AI-powered privacy-first texting assistant
EXTENSION_AUTHOR=Chatsy Team

# Privacy & Security
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY_LENGTH=32
PRIVACY_LEVEL=high
DATA_RETENTION_DAYS=30
MAX_CACHE_SIZE_MB=50

# AI Settings
DEFAULT_AI_PROVIDER=huggingface
MAX_SUGGESTIONS=3
RESPONSE_DELAY_MS=1000
CONTEXT_WINDOW_SIZE=5
MAX_MESSAGE_LENGTH=500

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# PLATFORM CONFIGURATIONS
# =============================================================================

# WhatsApp Web
WHATSAPP_ENABLED=true
WHATSAPP_DOMAIN=web.whatsapp.com
WHATSAPP_MESSAGE_SELECTORS=["[data-testid='msg-meta']",".message-in",".message-out"]
WHATSAPP_INPUT_SELECTORS=["[contenteditable='true'][data-testid='conversation-compose-box-input']"]

# Instagram Direct Messages
INSTAGRAM_ENABLED=true
INSTAGRAM_DOMAIN=www.instagram.com
INSTAGRAM_MESSAGE_SELECTORS=["[data-testid='direct-message']",".direct-message",".ig-dm"]
INSTAGRAM_INPUT_SELECTORS=["textarea[placeholder*='Message']","textarea[aria-label*='Message']"]

# Telegram Web
TELEGRAM_ENABLED=true
TELEGRAM_DOMAIN=web.telegram.org
TELEGRAM_MESSAGE_SELECTORS=[".message",".message-text",".text","[data-peer-id]"]
TELEGRAM_INPUT_SELECTORS=[".input-message-input","[contenteditable='true']"]

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Environment
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true

# Testing
ENABLE_MOCK_AI_RESPONSES=false
MOCK_RESPONSE_DELAY_MS=500
ENABLE_AUTOMATED_TESTING=false

# Analytics & Monitoring (Privacy-Compliant)
ENABLE_USAGE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false
ENABLE_PERFORMANCE_METRICS=false
ANALYTICS_ENDPOINT=https://analytics.chatsy.ai

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Content Delivery Network
CDN_URL=https://cdn.chatsy.ai
ASSETS_VERSION=v1.0.0

# Update Server
UPDATE_CHECK_URL=https://updates.chatsy.ai
UPDATE_CHECK_INTERVAL_HOURS=24

# Support & Documentation
SUPPORT_EMAIL=support@chatsy.ai
DOCUMENTATION_URL=https://docs.chatsy.ai
GITHUB_REPO=https://github.com/chatsy/extension
ISSUES_URL=https://github.com/chatsy/extension/issues

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# AI Model Parameters
AI_CONFIDENCE_THRESHOLD=0.7
AI_FALLBACK_ENABLED=true
AI_CACHE_ENABLED=true
AI_CACHE_TTL_MINUTES=30

# Conversation Analysis
SENTIMENT_ANALYSIS_ENABLED=true
INTENT_DETECTION_ENABLED=true
TOPIC_EXTRACTION_ENABLED=true
CONVERSATION_FLOW_ANALYSIS=true

# User Experience
AUTO_HIDE_SUGGESTIONS_MS=10000
SUGGESTION_POSITIONING=auto
ENABLE_KEYBOARD_SHORTCUTS=true
ENABLE_VOICE_INPUT=false

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_CONNECT_SRC="'self' https://api-inference.huggingface.co https://generativelanguage.googleapis.com"

# Data Protection
ENABLE_DATA_ENCRYPTION=true
ENABLE_CONTACT_ANONYMIZATION=true
ENABLE_MESSAGE_SANITIZATION=true
ENABLE_CONSENT_MANAGEMENT=true

# Compliance
GDPR_COMPLIANT=true
CCPA_COMPLIANT=true
COPPA_COMPLIANT=true
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Memory Management
MAX_MEMORY_USAGE_MB=100
GARBAGE_COLLECTION_INTERVAL_MS=300000
CACHE_CLEANUP_INTERVAL_MS=600000

# Network Optimization
REQUEST_TIMEOUT_MS=10000
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
ENABLE_REQUEST_CACHING=true

# UI Performance
ENABLE_LAZY_LOADING=true
ENABLE_VIRTUAL_SCROLLING=false
MAX_DOM_OBSERVERS=5
DEBOUNCE_DELAY_MS=300

# =============================================================================
# LOCALIZATION & INTERNATIONALIZATION
# =============================================================================

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja,ko
ENABLE_AUTO_LANGUAGE_DETECTION=true

# Regional Settings
DEFAULT_TIMEZONE=UTC
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss
NUMBER_FORMAT=en-US

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Data Backup
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
MAX_BACKUP_FILES=7
BACKUP_COMPRESSION=true

# Recovery Options
ENABLE_AUTO_RECOVERY=true
RECOVERY_CHECK_INTERVAL_MS=300000
MAX_RECOVERY_ATTEMPTS=3

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================

# System Notifications
ENABLE_SYSTEM_NOTIFICATIONS=true
NOTIFICATION_SOUND_ENABLED=false
NOTIFICATION_VIBRATION_ENABLED=false

# Alert Thresholds
LOW_API_QUOTA_THRESHOLD=100
CRITICAL_ERROR_THRESHOLD=5
PERFORMANCE_WARNING_THRESHOLD=80

# =============================================================================
# INTEGRATION & WEBHOOKS
# =============================================================================

# Webhook Endpoints
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-endpoint.com/chatsy
WEBHOOK_SECRET=your_webhook_secret_here

# Third-party Integrations
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
EMAIL_SMTP_CONFIG=

# =============================================================================
# CUSTOMIZATION & THEMING
# =============================================================================

# UI Theme
DEFAULT_THEME=light
ENABLE_DARK_MODE=true
ENABLE_CUSTOM_COLORS=false
PRIMARY_COLOR=#667eea
SECONDARY_COLOR=#764ba2

# Accessibility
ENABLE_HIGH_CONTRAST_MODE=false
ENABLE_LARGE_TEXT_MODE=false
ENABLE_SCREEN_READER_OPTIMIZATION=true
ENABLE_KEYBOARD_NAVIGATION=true

# =============================================================================
# DEPLOYMENT & BUILD
# =============================================================================

# Build Configuration
BUILD_TARGET=chrome
BUILD_ENVIRONMENT=production
ENABLE_SOURCE_MAPS=false
ENABLE_MINIFICATION=true

# Version Control
GIT_COMMIT_HASH=
BUILD_TIMESTAMP=
DEPLOYMENT_ENVIRONMENT=production

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_FILE_PATH=./logs/chatsy.log
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_MAX_FILES=5
LOG_FORMAT=json

# Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE_VERSION=1.0.0

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=Chatsy Extension
NEW_RELIC_ENVIRONMENT=production

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================

# Terms of Service
TOS_VERSION=1.0
TOS_ACCEPTANCE_REQUIRED=true
TOS_LAST_UPDATED=2024-01-01

# Privacy Policy
PRIVACY_POLICY_VERSION=1.0
PRIVACY_POLICY_URL=https://chatsy.ai/privacy
PRIVACY_POLICY_LAST_UPDATED=2024-01-01

# Cookie Policy
COOKIE_POLICY_ENABLED=true
COOKIE_CONSENT_REQUIRED=true
COOKIE_ANALYTICS_ENABLED=false

# =============================================================================
# SUPPORT & MAINTENANCE
# =============================================================================

# Maintenance Mode
MAINTENANCE_MODE_ENABLED=false
MAINTENANCE_MESSAGE=Chatsy is currently under maintenance. Please try again later.
MAINTENANCE_START_TIME=
MAINTENANCE_END_TIME=

# Support Configuration
SUPPORT_CHAT_ENABLED=false
SUPPORT_CHAT_URL=
SUPPORT_HOURS=24/7
RESPONSE_TIME_HOURS=4

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Beta Features
ENABLE_BETA_FEATURES=false
BETA_FEATURES_WHITELIST=
ENABLE_FEATURE_FLAGS=true

# A/B Testing
ENABLE_AB_TESTING=false
AB_TEST_VARIANTS=
AB_TEST_DURATION_DAYS=30

# =============================================================================
# NOTES & COMMENTS
# =============================================================================

# IMPORTANT: 
