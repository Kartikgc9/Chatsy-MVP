{
  "name": "chatsy-desktop",
  "version": "1.0.0",
  "description": "AI-powered privacy-first texting assistant for Windows",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win-portable": "electron-builder --win portable",
    "build:win-installer": "electron-builder --win nsis",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "chat",
    "ai",
    "assistant",
    "whatsapp",
    "instagram",
    "telegram",
    "desktop",
    "electron"
  ],
  "author": "Chatsy Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.chatsy.desktop",
    "productName": "Chatsy Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "chatsy",
      "repo": "chatsy-desktop"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chatsy/chatsy-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/chatsy/chatsy-desktop/issues"
  },
  "homepage": "https://chatsy.ai"
}
