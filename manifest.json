{
  "manifest_version": 3,
  "name": "Chatsy - AI Texting Assistant",
  "version": "1.0.0",
  "description": "AI-powered privacy-first texting assistant for WhatsApp, Instagram, and Telegram",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.whatsapp.com/*",
    "https://*.instagram.com/*",
    "https://*.telegram.org/*",
    "https://*.web.telegram.org/*",
    "https://api-inference.huggingface.co/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.whatsapp.com/*",
        "https://*.instagram.com/*",
        "https://*.telegram.org/*",
        "https://*.web.telegram.org/*"
      ],
      "js": [
        "content/content-script.js"
      ],
      "css": [
        "ui/suggestion-overlay.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Chatsy AI Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ui/suggestion-overlay.html",
        "ui/suggestion-overlay.css",
        "ui/suggestion-overlay.js"
      ],
      "matches": [
        "https://*.whatsapp.com/*",
        "https://*.instagram.com/*",
        "https://*.telegram.org/*",
        "https://*.web.telegram.org/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
